! rofi.color-normal: #222222, #eeeeee, #333333, #666666, #ffffaa
! rofi.color-active: #dd9911, #222222, #dd9911, #ffbb22, #222222
! rofi.color-urgent: #dd2222, #222222, #dd2222, #ffaaaa, #222222

! rofi.separator-style: solid
! rofi.sidebar-mode: true
! rofi.bw: 1
